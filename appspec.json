{
  "version": "1.2",
  "settings": [
    {
      "id": "file.name",
      "name": "File name",
      "description": "Insert a file name for your shapefile folder(s) and files, without spaces. Defaults to `moveapps-shapefile`",
      "defaultValue": "moveapps-shapefile",
      "type": "STRING"
    },
    {
      "id": "pts",
      "name": "Points shapefile",
      "description": "Select if you want to create a zipped set of shapefiles containing the points of the data set.",
      "defaultValue": true,
      "type": "CHECKBOX"
    },
	{
      "id": "seg",
      "name": "Line segments shapefile",
      "description": "Select if you want to create a zipped set of shapefiles containing the line segements of the data set.",
      "defaultValue": false,
      "type": "CHECKBOX"
    },
	{
      "id": "lins",
      "name": "Track lines shapefile",
      "description": "Select if you want to create a zipped set of shapefiles containing the full lines per track of the data set.",
      "defaultValue": false,
      "type": "CHECKBOX"
    },    
	{
      "id": "gpkg",
      "name": "GeoPackage file(s)",
      "description": "Select if you want additional *.gpkg files created for the selected shapefiles (points, segments, lines).",
      "defaultValue": false,
      "type": "CHECKBOX"
    }
  ],
  "dependencies": {
    "R": [
      {
        "name": "move2"
      },
      {
        "name": "sf"
      },
      {
        "name": "dplyr"
      },
      {
        "name": "zip"
      },
      {
        "name": "stringr"
      }
    ]
  },
  "providedAppFiles": [
    {
      "settingId": "vocab",
      "from": "data/auxiliary/user-files/provided-app-files/vocab/MovebankVocab_ShapefileNamesF.csv"
    }
  ],
